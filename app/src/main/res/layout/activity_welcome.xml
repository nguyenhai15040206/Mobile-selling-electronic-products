<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/office_flat_lay_background_blue_home_office_flat_lay_workspace_background_keyboard_notepad_succulent_pen_blue_149464667__1_"
    tools:context=".Activity.WelcomeActivity">

    <ImageView
        android:layout_marginTop="250dp"
        android:id="@+id/imgWelcom"
        android:transitionName="logo_image"
        android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLogoGhiChu"
        android:layout_width="0dp"
        android:textAlignment="center"
        android:fontFamily="@font/banner"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:text="HUFI - ITTC SHOP"
        android:textColor="#1A63CF"
        android:textSize="30sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>