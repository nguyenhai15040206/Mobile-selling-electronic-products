<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginBottom="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:id="@+id/imgProductManager"
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:scaleType="fitXY"
                android:src="@drawable/backgroud" />
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvNameProductsManager"
                android:textColor="@color/black"
                android:text="Điện thoại Iphone 11 promax abc xyz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvAmountProductManager"
                android:layout_marginTop="5dp"
                android:text="Số lượng: 2"
                android:textColor="@color/mauNau"
                android:layout_below="@id/tvNameProductsManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvUnitPriceManager"
                android:text="17.000.000đ"
                android:textAlignment="textEnd"
                android:textColor="@color/red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvProductManagerSale"
                android:layout_marginTop="3dp"
                android:textAlignment="textEnd"
                android:layout_below="@+id/tvUnitPriceManager"
                android:text="19.000.000đ"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>