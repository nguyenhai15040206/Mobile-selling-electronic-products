<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="95dp">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgDoApriori"
            android:src="@color/CustomMau"
            android:layout_width="120dp"
            android:layout_height="90dp"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_marginLeft="3dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvNameProductDoApriori"
            android:layout_marginTop="2dp"
            android:textSize="13sp"
            android:textColor="@color/mauNau"
            android:text="Iphone 12 promax 64GB aaaaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvUnitPriceProductDoApriori"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:textColor="@color/red"
            android:text="13,000,000đ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddCartDoApriori"
            android:text="Thêm vào giỏ hàng"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:textColor="@color/mauNau"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>